    <Style x:Key="CustomDeleteButton" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Name="ProtectButton"
                        Padding="5">
                        <svgc:SvgViewbox 
                            x:Name="Icon"
                            Source="/JKS_Report;component/Images/Icons/icon_Delete.svg"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="ProtectButton" Property="Padding" Value="3"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="ProtectButton" Property="Padding" Value="5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


